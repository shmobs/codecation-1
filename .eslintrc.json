{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"extends": "airbnb",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018
	},
	"plugins": [
		"react"
	],
	"rules": {
		"quotes": [
			"error",
			"single"
		],
		"jsx-quotes": [
			"error",
			"prefer-single"
		],
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": true
			}
		],
		"jsx-a11y/anchor-is-valid": [
			"error",
			{
				"components": [
					"Link"
				],
				"specialLink": [
					"to"
				],
				"aspects": [
					"noHref",
					"invalidHref",
					"preferButton"
				]
			}
		],
		"react/prop-types": "off",
		"import/extensions": [
			"off"
		],
		"jsx-a11y/media-has-caption": [
			"off"
		],
		"jsx-a11y/click-events-have-key-events": "off",
		"jsx-a11y/no-static-element-interactions": "off",
		"no-plusplus": [
			"error",
			{
				"allowForLoopAfterthoughts": true
			}
		],
		"no-underscore-dangle": [
			"error",
			{
				"allowAfterThis": true
			}
		],
		"no-multi-spaces": [
			"error",
			{
				"exceptions": {
					"VariableDeclarator": true
				}
			}
		],
		"no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "[props]|[next]"
			}
		],
		"react/button-has-type": [
			true
		],
		"react/jsx-one-expression-per-line": [
			true,
			{
				"allow": "single-child"
			}
		],
		"max-len": [
			"error",
			{
				"code": 100
			}
		],
		"object-curly-newline": [
			"error",
			{
				"ObjectExpression": {
					"consistent": true
				},
				"ObjectPattern": {
					"minProperties": 10
				}
			}
		],
		"prefer-destructuring": [
			"error",
			{
				"object": true,
				"array": false
			}
		]
	}
}